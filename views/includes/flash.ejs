<% if (success && success.length >0) { %>
 
    <div class="alert alert-success  alert-dismissible fade show sol-6 offset-3" role="alert">
        <%= success %>
        

        <button type="button"
         class="btn-close" 
         data-bs-dismiss="alert" 
         aria-label="Close"></button>

      </div>
<%} %>
 <!-- success is a res.locals defined in app.js -->


 <% if (error && error.length >0) { %>
 
    <div class="alert alert-danger  alert-dismissible fade show sol-6 offset-3" role="alert">
       
        <%= error %>

        <button type="button"
         class="btn-close" 
         data-bs-dismiss="alert" 
         aria-label="Close"></button>

      </div>
<%} %>